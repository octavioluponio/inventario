@model Cliente;
<body>
    <main class="main-wrap">
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Editar Cliente</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card mb-12">
                        <div class="card-body">
                            <form action="@Url.Action("Edit", "Cliente")" method="post">
                                <input type="hidden" name="idcliente" value="@Model.idcliente" />
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Nombre</label>
                                            <input type="text" name="nombre" placeholder="Escribe nombre " class="form-control" id="product_name" value="@Model.nombre" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Dirección</label>
                                            <input type="text" name="direccion" placeholder="Escribe direccion" class="form-control" id="product_name" value="@Model.direccion" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Telefono</label>
                                            <input type="text" name="telefono" placeholder="Escribe telefono " class="form-control" id="product_name" value="@Model.telefono" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Email</label>
                                            <input type="text" name="email" placeholder="Escribe email " class="form-control" id="product_name" value="@Model.email" required />
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Guardar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
