<body>
    <main class="main-wrap">
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Agregar Nuevo Producto</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card mb-12">
                        <div class="card-body">
                            <form action="@Url.Action("Create", "Producto")" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Nombre</label>
                                            <input type="text" name="nombre" placeholder="Escribe nombre" class="form-control" id="product_name" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_name" class="form-label">Stock</label>
                                            <input type="text" name="stock" placeholder="Escribe stock" class="form-control" id="product_name" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label for="idcategoria" class="form-label">Categoría</label>
                                            <select name="idcategoria" class="form-select" required>
                                                <option value="">Selecciona una categoría</option>
                                                @foreach (var categoria in ViewBag.Categorias)
                                                {
                                                    <option value="@categoria.Value">@categoria.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label for="idproveedor" class="form-label">Proveedor</label>
                                            <select name="idproveedor" class="form-select" required>
                                                <option value="">Selecciona un proveedor</option>
                                                @foreach (var proveedor in ViewBag.Proveedores)
                                                {
                                                    <option value="@proveedor.Value">@proveedor.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Guardar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
